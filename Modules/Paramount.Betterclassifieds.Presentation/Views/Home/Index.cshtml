@using Paramount
@using Paramount.ApplicationBlock.Mvc
@model Paramount.Betterclassifieds.Presentation.Models.HomeModel

@{
    Layout = Url.ClientUrl("~/Views/Shared/_ApplicationLayout.cshtml");
    ViewBag.Title = "Classifieds Home - Find everything you're looking for right here";
}

<div class="row top-buffer-20">
    <div class="col-xs-12">
        <div class="breadcrumb">Latest Ads</div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="list-group">

            @foreach (var ad in Model.AdSummaryList)
            {
                <a href="@Url.Action("Index", "Ad")" class="list-group-item">
                    <div class="media">
                        <img class="media-object pull-right thumbnail" alt="84x84" src="data:image/svg+xml;base64," style="width: 84px; height: 84px;">
                        <div class="media-body">
                            <h4 class="media-heading">@ad.Title</h4>
                            <p>
                                @ad.Description.TruncateOnWordBoundary(100)
                            </p>
                            <p>
                                <span class="label label-category">@ad.ParentCategoryName</span>
                                @foreach (var publication in ad.Publications)
                                {
                                    <span class="label label-publication">@publication</span>
                                }
                            </p>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>


@*Home utilities for users*@

<div class="row">
    <div class="col-md-4">
        <div class="jumbotron">
            <p>
                Start designing your online and print ad now!
            </p>
            <p>
                <a class="btn btn-lg btn-primary" href="#" role="button">Place New Ad &raquo;</a>
            </p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="jumbotron">
            <p>
                Looking for a tutor? Find one near you.
            </p>
            <p>
                <a class="btn btn-lg btn-primary" href="#" role="button">View Tutors Ads &raquo;</a>
            </p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="jumbotron">
            <p>
                Need help or suggestion to improve this website?
            </p>
            <p>
                <a class="btn btn-lg btn-primary" href="#" role="button">Contact Us &raquo;</a>
            </p>
        </div>
    </div>
</div>