@model Paramount.Betterclassifieds.Presentation.ViewModels.RegisterViewModel

<h2>Not a User?</h2>
<p>Register now to start placing ads and more. We need just a few details. </p>
<form role="form" method="POST" action="@Url.Action("Register")">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterEmail)
        @Html.TextBoxFor(m => m.RegisterEmail, new { @class = "form-control", required = "", autocomplete = "off"})
        @Html.ValidationMessageFor(m => m.RegisterEmail)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmEmail)
        @Html.TextBoxFor(m => m.ConfirmEmail, new { @class = "form-control", required = "", autocomplete = "off"})
        @Html.ValidationMessageFor(m => m.ConfirmEmail)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterPassword)
        @Html.PasswordFor(m => m.RegisterPassword, new { @class = "form-control", required = "", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.RegisterPassword)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "" })
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "" })
        @Html.ValidationMessageFor(m => m.LastName)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.PostCode)
        @Html.TextBoxFor(m => m.PostCode, new { @class = "form-control", required = "" })
        @Html.ValidationMessageFor(m => m.PostCode)
    </div>

    <div class="form-group">
        <button type="submit" id="btnRegister" class="btn btn-default">Register</button>
    </div>
</form>