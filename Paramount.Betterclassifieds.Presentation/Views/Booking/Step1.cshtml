@using Paramount
@using Paramount.Betterclassifieds.Presentation.Framework
@model Paramount.Betterclassifieds.Presentation.ViewModels.Booking.Step1View

@{
    ViewBag.Title = "Classifieds - Place new Ad";
    Layout = @Url.ClientUrl("~/Views/Shared/_ApplicationLayout.cshtml");
}

<div class="container">

    <ul class="nav nav-tabs" role="tablist">
        <li class="active"><a href="#">Step 1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
    </ul>

    @*Category selection*@
    <div class="row">
        <div class="col-xs-12">
            <div class="bs-callout bs-callout-info">
                <h4>Category</h4>
                <p>Please select category and sub category appropriate for your ad.</p>
            </div>
        </div>

        <div class="col-xs-12" id="Categories">
            <div class="form-group">

                <select id="parentCategoryId" data-bind="value: categoryId" class="form-control input-lg">
                    <option value="">-- Category --</option>
                    @foreach (var category in Model.ParentCategoryOptions)
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                </select>

                <br />

                <select id="subCategoryId" name="subCategoryId" class="form-control input-lg"
                        data-bind="value: subCategoryId, visible: shouldShowSubCategory">
                    <option>-- Sub Category --</option>
                    @if (Model.SubCategoryOptions != null)
                    {
                        foreach (var category in Model.SubCategoryOptions)
                        {
                            <option value="@category.Value">@category.Text</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>

    @*Newspapers*@
    @if (@Model.Publications.Any())
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="bs-callout bs-callout-info">
                    <h4>Publications</h4>
                    <p>Simply click on the papers your like your ad to appear in.</p>
                </div>
            </div>

            <div class="col-xs-12 button-options">
                <div class="center-block" data-bind="foreach: publications">
                    <button class="btn btn-default btn-block btn-lg"
                            data-bind="id: publicationId, text: title, css: {active : isSelected}, click : $parent.togglePublication"
                            data-toggle="button"></button>
                </div>
            </div>
        </div>
    }

    @*Validation errors*@
    <div class="row top-buffer-10">
        <div class="col-xs-12">
            <div class="alert alert-danger hidden"></div>
        </div>
    </div>
    
    @*Pager*@
    <ul class="pager">
        <li class="next"><a id="submit" href="#submit">Next &rarr;</a></li>
    </ul>

</div>

@section Scripts{
    <script>

        var StepOne = function(data) {
            var self = this;
            self.categoryId = ko.observable(data.categoryId);
            self.subCategoryId = ko.observable(data.subCategoryId);
            self.publications = ko.observableArray(data.publications);
            self.shouldShowSubCategory = ko.computed(function() {
                return self.categoryId() !== "";
            });
            self.togglePublication = function(pub) {
                if (!pub)
                    return;

                if (pub.isSelected === 'undefined') {
                    return;
                }

                pub.isSelected = !pub.isSelected;
            };
        };

        var data = @Html.Raw(Model.ToJsonString());
        var stepOneModel = new StepOne(data);

        ko.applyBindings(stepOneModel);
        
        (function($) {

            function validateError(msg) {
                $('.alert-danger').removeClass('hidden').text(msg);
            }

            $('#parentCategoryId').on('change', function() {
                var me = $(this);
                stepOneModel.subCategoryId = ko.observable(null); // clear
                $('#subCategoryId').loadSubCategories('@Url.Action("GetCategories", "Categories")', me.val(), false);
            });

            $('#submit').on('click', function() {
                var modelToPost = ko.toJS(stepOneModel);

                // Validate
                if (isNaN(stepOneModel.subCategoryId())) {
                    validateError('You must select a sub category for your ad');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("Step1")',
                    data : JSON.stringify(modelToPost),
                    contentType : 'application/json',
                    type : 'POST',
                    dataType : 'json',
                    success : function(respondUrl) {
                        window.location = respondUrl;
                    },
                    error : function(errorMsg) {
                        
                    }
                });
            });
        })(jQuery);
    </script>
}