@using Paramount
@model Paramount.Betterclassifieds.Presentation.ViewModels.Booking.Step3View

@{
    ViewBag.Title = "Classifieds - Place new Ad";
    Layout = @Url.ClientUrl("~/Views/Shared/_ApplicationLayout.cshtml");
}

<div class="container">
    <ul class="nav nav-tabs" role="tablist">
        <li><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li class="active"><a href="#">Step 3</a></li>
    </ul>

    <form id="schedulingForm" action="@Url.Action("Step3", "Booking")" method="POST" role="form">

        <div class="row top-buffer-20">
            <div class="col-xs-12">

                <div class="bs-callout bs-callout-info">
                    <h4>Schedule</h4>
                    <p>Your ad will be available for @Model.DurationDays  days from the date you select below.</p>
                </div>
                
                <div class="form-group">
                    <label>Start Date</label>
                    <input id="startDate" class="form-control input-lg" data-provide="datepicker" />
                </div>

            </div>
        </div>

        @*Pager*@
        <ul class="pager">
            <li class="previous">
                <button id="btnPrev" class="btn btn-large btn-default" data-nav='@Url.Action("Step2")'>&larr; Previous</button>
            </li>
            <li class="next">
                <button id="btnSubmit" class="btn btn-large btn-default">Next &rarr;</button>
            </li>
        </ul>
    </form>
</div>

@section Scripts{
    <script>

    </script>
}