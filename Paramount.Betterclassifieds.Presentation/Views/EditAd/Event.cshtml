@model EventEditViewModel

@{
    Layout = "~/Views/Shared/_ApplicationLayoutWithSearch.cshtml";
    ViewBag.Title = "Manage my Ads";
}

@section Scripts{
    <script>
        $(function() {
            var eventEditViewModel = @Html.Raw(Model.ToJsonString());
            $paramount.ui.editEvent.init(eventEditViewModel);
        });

        var ctx = document.getElementsByClassName("chart")[0].getContext("2d");
        var theChart = new Chart(ctx).Doughnut([
                {
                    value: 300,
                    color: "#F7464A",
                    highlight: "#FF5A5E",
                    label: "Red"
                },
                {
                    value: 50,
                    color: "#46BFBD",
                    highlight: "#5AD3D1",
                    label: "Green"
                },
                {
                    value: 100,
                    color: "#FDB45C",
                    highlight: "#FFC870",
                    label: "Yellow"
                }
        ]
        );
    </script>
}

<div class="event-ticket-management">
    <div class="row">
        <div class="col-xs-12">
            @Html.Partial("_UserMenu")
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <h2 class="page-header">
                <i class="fa fa-ticket"></i>&nbsp;Ticketing
            </h2>

            <canvas class="chart" width="100px" height="100px"></canvas>

            <div data-bind="foreach: tickets">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="pull-left form-inline">
                            <span data-bind="text: ticketName"></span>
                            <span data-bind="text: priceFormatted"></span>
                        </div>
                        <div class="pull-right">
                            <button class="btn btn-default" data-bind="click: enableEdit, visible : editMode() === false"><i class="fa fa-pencil"></i>&nbsp;Edit</button>
                            <button class="btn btn-success" data-bind="click: saveTicketDetails, visible: editMode" data-loading-text="saving..."><i class="fa fa-floppy-o"></i>&nbsp;Save</button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            
                        </div>
                        <div class="row">
                            <div class="col-xs-4 col-md-3 text-center">
                                <h4>Tickets Sold</h4>
                                <span class="badge" data-bind="text: soldQuantity"></span>
                            </div>
                            <div class="col-xs-4 col-md-3 text-center">
                                <h4>Remaining Qty</h4>
                                <span class="badge" data-bind="text: remainingQuantity"></span>
                            </div>
                            <div class="col-md-6" data-bind="visible: editMode">
                                <div class="form-group-lg">
                                    <label class="control-label">Name</label>
                                    <input class="form-control" type="text" data-bind="value: ticketName"/>
                                </div>
                                <div class="form-group-lg">
                                    <label class="control-label">Price</label>
                                    <input class="form-control" type="number" data-bind="value: price"/>
                                </div>
                                <div class="form-group-lg">
                                    <label class="control-label">Quantity</label>
                                    <input class="form-control" type="number" data-bind="value: remainingQuantity"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <button class="btn btn-primary">Add Ticket Type</button>
            </div>

        </div>
    </div>
</div>