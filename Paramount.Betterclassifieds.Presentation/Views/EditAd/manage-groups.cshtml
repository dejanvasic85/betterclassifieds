@model ManageGroupsViewModel

@{
    ViewBag.Title = "Manage Event Groups";
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
}

@section Scripts
{
    <script>
        $(function() {
            var data = @Html.Raw(Model.ToJsonString());
            var vm = new $paramount.models.ManageGroups(data);
            var rootNode = $('#manageGroups')[0];
            ko.applyBindings(vm, rootNode);
        });
    </script>
}

<div class="container top-buffer-60">

    <h2 class="page-header">
        Manage Event Groups
    </h2>

    <div class="row" id="manageGroups">
        <div class="col-xs-12 text-right">
            <button class="btn btn-primary" data-bind="click: createStart">Create Group <i class="fa fa-plus-circle"></i></button>
            
        </div>

        <div class="col-xs-12 top-buffer-20" data-bind="visible: isCreateEnabled">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group-lg">
                        <label class="control-label">Group Name</label>
                        <input class="form-control" type="text" data-bind="value: newGroup().groupName" />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group-lg">
                        <label class="control-label">Max Guests</label>
                        <input class="form-control" type="number" data-bind="value: newGroup().maxGuests"/>
                    </div>
                </div>

                <div class="col-sm-12 top-buffer-20">
                    <div class="form-group-lg">
                        <label class="control-label">Available Tickets</label>
                        <p class="help-block">Check the ticket types that this group will be available for customers when they are booking their tickets.</p>
                        <ul class="list-group" data-bind="foreach: newGroup().ticketSelection">
                            <li class="list-group-item">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" data-bind="checked: isSelected">
                                        <!-- ko text: ticketName --><!-- /ko -->
                                    </label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="row top-buffer-40">
                <div class="col-xs-6 text-left">
                    <button class="btn btn-warning" data-bind="click: createCancel">Cancel</button>
                </div>
                <div class="col-xs-6 text-right">
                    <button class="btn btn-success" data-bind="click: create">Save</button>
                </div>
            </div>
        </div>

        <div class="col-xs-12 top-buffer-20" data-bind="foreach: groups">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span data-bind="text: groupName"></span>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <div>Available Tickets</div>
                        </div>
                        <div class="col-sm-4">
                            <div>Max Guests</div>
                            <div>
                                <strong data-bind="text: maxGuestsText"></strong>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div>Current Guests</div>
                            <div>
                                <strong data-bind="text: guestCount"></strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>