@using Paramount.Betterclassifieds.Presentation.ViewModels.Email

@model EventTicketGuestEmail

@{
    Layout = "~/Views/Email/_EmailMaster.cshtml";

}

<p>
    Congratulations, you have tickets to <strong>@Model.EventName</strong>

    @if (!Model.IsGuestTheBuyer)
    {
        <text>organised by @Model.BuyerName</text>
    }

</p>

<p>
    Event starts @Model.EventStartDateTime @@ @Model.EventLocation
</p>

<p>Your details: <br/>
Name: @Model.GuestName <br/>
Email: @Model.GuestEmail <br/>
@if (Model.SeatNumber.HasValue())
{
    <text>Seat Number: @Model.SeatNumber    </text>
}
</p>

<p>Tickets are attached to this email.</p>

<p>
    <a class="btn-primary" href="@Model.EventUrl">See Event Page</a>
</p>

<hr />

<div>
    <p>
        Barcode below can be used for entry. Please see the event details for further information.
    </p>
    <img class="thumbnail" alt="Barcode" src="@Model.BarcodeImgUrl" />
</div>