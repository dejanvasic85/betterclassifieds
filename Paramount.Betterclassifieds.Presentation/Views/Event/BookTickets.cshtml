@model BookTicketsViewModel
@{
    ViewBag.Title = "Book Tickets";
    Layout = "~/Views/Shared/_ApplicationLayoutWithSearch.cshtml";
}
@section scripts
{
    <script>
        var model = @Html.Raw(Model.ToJsonString());

        $paramount.ui.bookTickets.init({
            data : model
        });
    </script>
}
<div id="bookTicketsView" class="event-book-tickets">
    <h2>Confirm tickets for event : @Model.Title</h2>

    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-warning">
                <strong>
                    Your tickets have been reserved. Please confirm your ticket selection
                    and complete your details. You have @Model.TotelReservationExpiryMinutes minutes for your reservation.
                </strong>
            </div>

            <div class="alert alert-warning text-center alert-count-down">
                Time Left:
                <span data-bind="text: minsRemaining"></span>:<span data-bind="text: secondsRemainingDisplay"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="bs-callout bs-callout-info">
                <h4><i class="fa fa-ticket"></i>&nbsp; Tickets</h4>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="bs-callout bs-callout-info">
                <h4><i class="fa fa-user"></i> &nbsp; Your Details</h4>
            </div>
            <div>
                <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-primary active">
                        <input type="radio" name="options" id="option1" autocomplete="off" checked> New User
                    </label>
                    <label class="btn btn-primary">
                        <input type="radio" name="options" id="option2" autocomplete="off"> Existing User
                    </label>
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" id="Email" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" id="Password"/>
                </div>
            </div>
        </div>
    </div>

</div>
