@using Paramount
@model BookTicketsViewModel
@{
    ViewBag.Title = "Book Tickets";
    Layout = "~/Views/Shared/_ApplicationLayoutWithSearch.cshtml";
}
@section scripts
{
    <script>
        var model = @Html.Raw(Model.ToJsonString());

        $paramount.ui.bookTickets.init({
            data : model
        });
    </script>
}
<div id="bookTicketsView" class="event-book-tickets">
    <h2>Confirm tickets for event : @Model.Title</h2>

    <div class="row reservation-countdown" data-bind="visible: canContinue">
        <div class="col-xs-12">
            <div class="alert alert-warning">
                Your tickets have been reserved for @Model.TotelReservationExpiryMinutes minutes.
                Please confirm your ticket selection, details and payment.
            </div>

            <div class="alert alert-warning text-center alert-count-down">
                <div data-bind="css : {strikethrough : outOfTime}">
                    Time Left:
                    <span data-bind="text: minsRemaining"></span>:<span data-bind="text: secondsRemainingDisplay"></span>
                </div>
                <div data-bind="visible: outOfTime()">
                    Sorry, you have run out of time.<a href="@Url.AdUrl(Slug.Create(true, Model.Title), Model.AdId, routeName: Model.CategoryAdType)">
                        Try Again.
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8 book-tickets-form">

            @*Tickets*@
            <div class="bs-callout bs-callout-info">
                <h4><i class="fa fa-ticket"></i>&nbsp; Tickets</h4>
            </div>
            <div>
                <ul data-bind="foreach: reservedTickets" class="list-group">
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-sm-6 col-xs-4" data-bind="text: ticketName"></div>
                            <div class="col-sm-2 col-xs-4" data-bind="text: $paramount.formatCurrency( price() )"></div>
                            <div class="col-sm-4 col-xs-4">
                                <span class="label" data-bind="text: quantity, css : {'label-success' : isReserved, 'label-danger' : notReserved }"></span>
                                <span class="label" data-bind="text: status, css : {'label-success' : isReserved, 'label-danger' : notReserved }"></span>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div data-bind="visible : notAllRequestsAreFulfilled">
                <span class="alert alert-danger">
                    Unfortunately, one or more of your requests was greater than what is currently available.
                    @TryAgainButton()
                </span>
            </div>


            @*User Details*@
            <form id="bookTicketsUserDetailsForm">
                <div class="bs-callout bs-callout-info">
                    <h4><i class="fa fa-user"></i> &nbsp; Your Details</h4>
                </div>


                <div class="form-group">
                    <label class="control-label" for="firstName">First Name</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" maxlength="25" data-bind="value: firstName"
                           data-val="true"
                           data-val-required="First name is required" />
                    <span class="field-validation-valid help-block" data-valmsg-for="firstName" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="lastName">Surname</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" maxlength="25" data-bind="value: lastName"
                           data-val="true"
                           data-val-required="Surname is required"/>
                    <span class="field-validation-valid help-block" data-valmsg-for="lastName" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="phone">Phone</label>
                    <input type="text" class="form-control" id="phone" name="phone" maxlength="10" data-numbers-only data-bind="value: phone"
                           data-val="true"
                           data-val-required="Phone is required" />
                    <span class="field-validation-valid help-block" data-valmsg-for="phone" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="postCode">Post Code</label>
                    <input type="text" class="form-control" id="postCode" name="postCode" maxlength="4" data-numbers-only data-bind="value: postCode"
                           data-val="true"
                           data-val-required="Post Code is required" />
                    <span class="field-validation-valid help-block" data-valmsg-for="postCode" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" for="email">Email</label>
                    <input class="form-control" type="text" data-bind="value: email" id="email" name="email"
                           data-val="true"
                           data-val-required="Email is required"
                           data-val-email="Email is not a valid address"/>
                    <span class="field-validation-valid help-block" data-valmsg-for="email" data-valmsg-replace="true"></span>
                </div>

                <div class="form-group" data-bind="visible: showPassword">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" />
                    <span class="help-block">
                        Allows your to come back and manage your payments and bookings. Existing user? Just use your existing password.
                    </span>
                </div>
            </form>


            @*Payment*@
            <form id="paymentForm" data-bind="visible: requiresPayment">
                <div class="bs-callout bs-callout-info">
                    <h4><i class="fa fa-credit-card"></i> &nbsp; Payment</h4>
                </div>
                <p>Coming soon</p>
            </form>
        </div>

        <div class="col-sm-4">
            <div class="bs-callout bs-callout-info">
                <h4><i class="fa fa-list-alt"></i>&nbsp; @Model.Title</h4>
            </div>
            <p>@Model.Description</p>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12" data-bind="visible: !canContinue()">
            <div class="alert alert-info">
                Unable to continue. Your tickets could not be reserved due to availability.
                @TryAgainButton()
            </div>
        </div>

        <div class="col-xs-12 col-sm-8 book-tickets-form">
            <div class="pull-right" data-bind="visible: canContinue() && outOfTime() === false">
                <button class="btn btn-primary" data-bind="click: submitTicketBooking">
                    Submit
                </button>
            </div>
        </div>
    </div>

</div>

@helper TryAgainButton()
{
    <a class="btn btn-default btn-sm js-load" href="@Url.AdUrl(Slug.Create(true, Model.Title), Model.AdId, routeName: Model.CategoryAdType)">
        <i class="fa fa-refresh"></i> Try Again.
    </a>
}