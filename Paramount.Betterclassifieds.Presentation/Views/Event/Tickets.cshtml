@using Paramount
@using Paramount.Betterclassifieds.Presentation.Framework.HtmlHelpers
@model List<EventTicketPrintViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TicketPrint</title>
    <link rel="stylesheet" href="@Url.ContentAbsolute("~/Content/bootstrap-3.3.6.min.css")" media="all" />
    <link rel="stylesheet" href="@Url.ContentAbsolute("~/Content/event-ticket-print.min.css")" media="all" />
    <link rel="stylesheet" href="@Url.ContentAbsolute("~/Content/font-awesome-4.4.0.css")" media="all" />
</head>
<body>

    @foreach (var tick in Model)
    {
        <div class="ticket-container">
            <div class="ticket">
                @if (tick.EventPhoto.HasValue())
                {
                    <div class="event-picture">
                        <img class="thumbnail" src="@Url.Image(@tick.EventPhoto, height: 200, width: 200).WithFullUrl()" />
                    </div>
                }
                @{
                    var eventInfoClass = tick.EventPhoto.HasValue() ? string.Empty : "full";
                    var ticketNameClass = string.Empty;
                    var eventNameLength = tick.EventName.Length;
                    if (eventNameLength > 55)
                    {
                        ticketNameClass = "smaller";
                    }
                } 

                <div class="event-info @eventInfoClass">
                    <div class="event-title">
                        <h2 class="@ticketNameClass">
                            @tick.EventName
                        </h2>
                    </div>
                    <div class="event-details container-fluid">
                        <div class="row">

                            <div class="col-xs-12">
                                <label>
                                    <i class="fa fa-ticket"></i> Ticket
                                </label>
                                <span class="detail"> @tick.TickTypeAndPrice</span>
                            </div>

                            @if (tick.GroupName.HasValue())
                            {
                                <div class="col-xs-12">
                                    <label>
                                        <i class="fa fa-list-ol"></i> Group
                                    </label>
                                    <span class="detail">@tick.GroupName</span>
                                </div>
                            }

                            <div class="col-xs-12">
                                <label>
                                    <i class="fa fa-map-marker"></i> Location
                                </label>
                                <span class="detail">@tick.Location</span>
                            </div>

                            <div class="col-xs-12">
                                <label>
                                    <i class="fa fa-clock-o"></i> When
                                </label>
                                <span class="detail">@tick.StartDateTime</span>
                            </div>

                            <div class="col-xs-12">
                                <label>
                                    <i class="fa fa-clock-o"></i> Guest Name
                                </label>
                                <span class="detail">@tick.GuestFullName</span>
                            </div>

                            @if (tick.ContactNumber.HasValue())
                            {
                                <div class="col-xs-12">
                                    <label>
                                        <i class="fa fa-phone"></i> Contact
                                    </label>
                                    <span class="detail">@tick.ContactNumber</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="event-barcode">
                    @Html.GenerateRelayQrCode(tick.BarcodeDataUrl, height: 162, width: 162)
                </div>
            </div>
        </div>
                    }



</body>

</html>
