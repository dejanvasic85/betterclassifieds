@using Paramount
@using Paramount.Betterclassifieds.Mvc.HtmlHelpers
@model EventViewDetailsModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
    var adUrl = Url.AdUrl(Model.TitleSlug, Model.AdId, true, routeName: Model.CategoryEventType);
    var adUrlEncoded = Server.HtmlEncode(adUrl);
}
@section scripts
{
    <script>
        var ticketData = @Html.Raw( Model.Tickets.ToJsonString() );
        $paramount.ui.eventView.init({
            ticketData : ticketData,
            maxTicketsPerBooking : @Model.MaxTicketsPerBooking,
            baseUrl : '@Url.Action("Index", "Home")',
            eventId : @Model.EventId,
            floorPlanDocumentId : '@Model.LocationFloorPlanDocumentId',
            floorPlanFileName : '@Model.LocationFloorPlanFilename'
        });
    </script>
}


@Html.Partial("_FloorPlanDialogDialog")

<div class="event-details">
    <div class="event-title">
        <div class="container">
            <h1>
                @Model.Title
            </h1>
            <p class="details">
                <i class="fa fa-calendar-check-o"></i> @Model.EventStartDate at @Model.EventStartTime.
            </p>
            <p>
                <i class="fa fa-map-marker"></i> @Model.Location
            </p>

            <div class="pull-right social-share">
                <a class="btn btn-default btn-lg" href="http://twitter.com/share?url=@adUrlEncoded" target="_blank"><i class="fa fa-twitter"></i></a>
                <a class="btn btn-default btn-lg"><i class="fa fa-facebook"></i></a>
                <a class="btn btn-default btn-lg"><i class="fa fa-linkedin"></i></a>
                <a class="btn btn-default btn-lg"><i class="fa fa-google-plus"></i></a>
                <a class="btn btn-default btn-lg"><i class="fa fa-envelope"></i></a>
            </div>
        </div>
    </div>

    <div class="container" id="eventView">
        <div class="row">
            <div class="col-md-12 event-photo">
                <img class="img-responsive" src="@Url.Image(Model.EventPhoto, 400, 1020)" />
            </div>
        </div>

        <div class="row">
            @if (Model.TicketingEnabled)
            {
                <div class="col-md-6 ticketing" id="ticketing">
                    @if (Model.TicketingEnabled && !Model.IsClosed)
                    {
                        <h3>
                            <i class="fa fa-ticket"></i> Tickets
                        </h3>
                        <ul class="list-group" data-bind="foreach: tickets">
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-xs-4">
                                        <span class="ticket-info" data-bind="text: ticketName"></span>
                                    </div>
                                    <div class="col-xs-2">
                                        <span class="ticket-info" data-bind="visible: price() === 0, text : 'Free'"></span>
                                        <span class="ticket-info" data-bind="visible: price() > 0, text : priceFormatted"></span>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="form-inline pull-right">
                                            <span data-bind="visible: soldOut, text: 'SOLD OUT'" class="label label-danger"></span>
                                            <div class="form-group" data-bind="visible: isAvailable">
                                                <span class="ticket-info">Quantity</span>
                                                <select class="form-control" data-bind="value: selectedQuantity, options: maxTicketsPerBooking, optionsText : 'label', optionsValue : 'value'"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>

                        <div class="well" data-bind="visible: totalSelectedTickets() > 0">
                            <button class="btn btn-primary pull-right" data-loading-text="Please Wait..." data-bind="click: startOrder">
                                Get Tickets <i class="fa fa-arrow-right"></i>
                            </button>
                        </div>

                        <div class="text-center">
                            <a class="btn btn-block btn-default" data-toggle="modal" id="btnViewFloorplan" data-target="#floorplanDialog">
                                <i class="fa fa-map"></i> View Floor Plan / Seating
                            </a>
                        </div>
                    }


                    @if (Model.IsClosed)
                    {
                        <div class="panel panel-body">
                            <div class="well">
                                The ticketing has been closed for this event. Please
                                contact the organiser for any further queries.
                            </div>
                        </div>
                    }

                </div>
            }
            <div class="@(Model.TicketingEnabled ? "col-md-6" : "col-md-12")">
                <h3>
                    <i class="fa fa-paperclip"></i> Details
                </h3>
                <div class="well well-lg @(Model.HtmlText.Length > 600 ? "small" : "")">
                    @Html.Raw(Model.HtmlText)
                </div>
            </div>
        </div>

    </div>

    <div class="event-map top-buffer-40">
        <div class="google-map" data-latitude="@Model.LocationLatitude" data-longitude="@Model.LocationLongitude" data-address="@Model.Location"></div>
        <div class="container top-buffer-20">
            <div class="text-center">
                <a class="btn btn-default" href='http://maps.google.com/?q=@Model.Location' target="_blank">
                    <i class="fa fa-map-marker"></i> Open in maps
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row top-buffer-20">
            <div class="col-xs-12 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4><i class="fa fa-phone"></i> Organiser Details</h4>
                    </div>
                    <table class="table table-striped">
                        @Html.AdContactDetail(m => m.OrganiserName, "user")
                        @Html.AdContactDetail(m => m.OrganiserPhone, "phone")
                        @Html.AdContactDetail(m => m.Views, "eye-open")
                        @Html.AdContactDetail(m => m.Posted, fontIcon: "calendar-check-o")
                    </table>
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                @Html.Partial("_ContactAdvertiser.cshtml")
            </div>

        </div>
    </div>

</div>


@section HeadSection
{
    <link rel="canonical" href="@adUrl" />
    <meta name="description" content="@Model.Description" />
    <meta http-equiv="Content-Language" content="en" />
    <meta name="robots" content="index, follow" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="@Model.Title" />
    <meta name="twitter:description" content="@Model.Description" />
    <meta name="twitter:image" content="@Url.ImageOriginal(Model.EventPhoto)" />

}