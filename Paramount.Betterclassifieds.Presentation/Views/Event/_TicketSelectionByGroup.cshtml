<div data-bind="visible: groups().length > 0 && groupsRequired() === true">
    <p>
        Selected Tickets:
    </p>
    <ul class="list-group" data-bind="foreach: selectedTickets">
        <li class="list-group-item">
            <div class="text-left">
                <span data-bind="text: ticketName"></span> &nbsp;
                x<span data-bind="text: selectedQuantity"></span>
            </div>
            <div class="text-right">
                <button class="btn btn-default" data-bind="click: $parent.removeSelectedTicket">
                    <i class="fa fa-trash"></i>
                </button>
            </div>
        </li>
    </ul>
    <div class="text-right">
        <button class="btn btn-primary btn-block" data-loading-text="Please Wait..."
                data-bind="click: startOrder" id="btnGetTickets">
            Order Tickets <i class="fa fa-arrow-right"></i>
        </button>
    </div>

    <p>
        Available groups:
    </p>

    <ul class="list-group group-button-options" data-bind="foreach: groups">
        <li class="list-group-item">
            <button class="btn btn-primary btn-block ko-load" data-bind="click: $parent.onGroupSelect">
                <span data-bind="text: groupNameWithCount"></span>
            </button>
        </li>
    </ul>
</div>

<div id="ticketSelectionModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Available tickets for group:</h4>
            </div>
            <div class="modal-body" data-bind="foreach: availableTickets">
                <ticket-selection params="ticket: $data"></ticket-selection>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-bind="click: onGroupTicketSave">Save &amp; Find Another...</button>
                <button type="button" class="btn btn-primary ko-load" data-bind="click: onGroupTicketSaveAndOrder">Checkout <i class="fa fa-arrow-circle-right"></i></button>
            </div>
        </div>
    </div>
</div>