@using Paramount
@model HomeModel

@{
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
    ViewBag.Title = "Classifieds Home - Find everything you're looking for right here";
}

@section Main{
    <main class="mast-head" id="content" role="main">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h1>
                        <a href="@Url.Action("Index", "Home")">
                            @*<img class="themusic-logo"
                                src="@Url.Content("~/Content/KandoBay/img/Kandobay_Logo.png")"
                                width="300"
                                alt="Kandobay Classifieds" />*@
                            KandoBay
                        </a>
                    </h1>
                    <p>
                        <em>Bringing the african community together...</em>
                    </p>
                </div>
                <div class="col-md-8 col-md-offset-2">
                    <form action="@Url.Action("Find", "Listings")">
                        <div class="input-group input-group-lg">
                            <input type="text" name="keyword" id="keyword" class="form-control input-lg" placeholder="I am after...">
                            <div class="input-group-btn input-group-lg">
                                <button class="btn btn-default" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>

                        </div><!-- /input-group -->
                    </form>
                </div>
            </div>
        </div>
    </main>
}

<div class="row">
    <div class="col-md-8">
        <div class="well well-sm">Latest Ads</div>
        @Html.Partial("_ListingResults", Model.AdSummaryList)
    </div>
    <div class="col-md-4">
        <div class="jumbotron">
            <p>Design your <strong>free online ad</strong> now. Use your mobile, tablet or PC.</p>
            <img src="@Url.Content("~/Content/images/BookUsingThePhone.PNG")" class="img-stretch" alt="Book using your phone" />
            <p><a class="btn btn-lg btn-primary btn-block" href="@Url.Action("Step1", "Booking")" role="button">Place New Ad &raquo;</a></p>
        </div>
        <div class="jumbotron">
            <p>
                Looking for a tutor? Find one near you.
            </p>
            <p>
                <a class="btn btn-lg btn-primary" href="@Url.SeoUrl("Tutors")" role="button">View Tutors Ads &raquo;</a>
            </p>
        </div>
        <div class="jumbotron">
            <p>
                Need help or suggestion to improve this website?
            </p>
            <p>
                <a class="btn btn-lg btn-primary" href="@Url.Action("ContactUs", "Home")" role="button">Contact Us &raquo;</a>
            </p>
        </div>
    </div>
</div>

