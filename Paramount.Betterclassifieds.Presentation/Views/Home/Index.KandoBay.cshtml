@using Paramount
@model HomeModel

@{
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
    ViewBag.Title = "Classifieds Home - Find everything you're looking for right here";
}

@section Main{
    <main class="mast-head" id="content" role="main">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h1>
                        <a href="@Url.Action("Index", "Home")">
                            @*<img class="themusic-logo"
                                src="@Url.Content("~/Content/KandoBay/img/Kandobay_Logo.png")"
                                width="300"
                                alt="Kandobay Classifieds" />*@
                            KandoBay
                        </a>
                    </h1>
                    <p>
                        <em>Bringing the African community together...</em>
                    </p>
                </div>
                <div class="col-md-8 col-md-offset-2">
                    <form action="@Url.Action("Find", "Listings")">
                        <div class="input-group input-group-lg">
                            <input type="text" name="keyword" id="keyword" class="form-control input-lg" placeholder="I am after...">
                            <div class="input-group-btn input-group-lg">
                                <button class="btn btn-default" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>

                        </div><!-- /input-group -->
                    </form>
                </div>
            </div>
        </div>
    </main>
}

@if (Model.AdSummaryList.Count > 0)
{
    <div class="home-featured">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h2>What's new?</h2>
                </div>
            </div>

            <div class="row">

                @foreach (var ad in Model.AdSummaryList)
                {
                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">
                            <img src="@Url.Image(ad.PrimaryImage, 200, 200)" alt="@ad.Heading">
                            <div class="caption">
                                <h3>@ad.Heading</h3>
                                <p>
                                    @ad.Description.TruncateOnWordBoundary(150)
                                </p>
                                <p>
                                    <span class="label label-category">@ad.ParentCategoryName</span>
                                    <span class="label label-category">@ad.CategoryName</span>
                                </p>
                                <p>
                                    @foreach (var publication in ad.Publications)
                                    {
                                        <span class="label label-publication">@publication</span>
                                    }
                                </p>
                                <p>@ad.BookingDateFriendly</p>
                                <p>
                                    <a href="@Url.AdUrl(ad.HeadingSlug, ad.AdId, routeName: ad.CategoryAdType)"
                                       class="btn btn-primary" role="button">Details</a>
                                </p>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>

}

<div class="container top-buffer-20">
    <div class="row">
        <div class="col-md-8">
            <div class="well well-sm">Latest Ads</div>
            @Html.Partial("_ListingResults", Model.AdSummaryList)
        </div>
        <div class="col-md-4">
            <div class="jumbotron">
                <p>Design your <strong>free online ad</strong> now. Use your mobile, tablet or PC.</p>
                <img src="@Url.Content("~/Content/images/BookUsingThePhone.PNG")" class="img-stretch" alt="Book using your phone" />
                <p><a class="btn btn-lg btn-primary btn-block" href="@Url.Action("Step1", "Booking")" role="button">Place New Ad &raquo;</a></p>
            </div>
            <div class="jumbotron">
                <p>
                    Looking for a tutor? Find one near you.
                </p>
                <p>
                    <a class="btn btn-lg btn-primary" href="@Url.SeoUrl("Tutors")" role="button">View Tutors Ads &raquo;</a>
                </p>
            </div>
            <div class="jumbotron">
                <p>
                    Need help or suggestion to improve this website?
                </p>
                <p>
                    <a class="btn btn-lg btn-primary" href="@Url.Action("ContactUs", "Home")" role="button">Contact Us &raquo;</a>
                </p>
            </div>
        </div>
    </div>
</div>
