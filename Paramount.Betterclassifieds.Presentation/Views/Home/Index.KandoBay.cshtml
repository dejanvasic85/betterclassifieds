@using System.Monads
@using Paramount

@model HomeModel

@{
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
    ViewBag.Title = "KandoBay - Buy, Sell Event Tickets. Free tickets means free service";

    // Setup latest ads carousel
    var latestAdsRowCount = 1;
    var adCount = Model.With(m => m.AdSummaryList).Return(a => a.Count, 0);
    if (adCount == 0)
    {
        latestAdsRowCount = 0;
    }
    if (adCount > 3)
    {
        latestAdsRowCount = adCount / 3;
    }
}

@section Scripts
{
    <script>
        $(function () {
            $paramount.ui.home.init();
        });
    </script>
}

@section Main{
    <main class="mast-head" id="content" role="main">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h1>
                        <a href="@Url.Home()">
                            KandoBay
                        </a>
                    </h1>
                    <p>
                        <em>Buy, Sell Event Tickets. Free tickets means free service. </em>
                    </p>
                </div>
                <div class="col-md-8 col-md-offset-2">
                    <form action="@Url.Search()">
                        <div class="input-group input-group-lg">
                            <input type="text" name="keyword" id="keyword" class="form-control input-lg" placeholder="I am after...">
                            <div class="input-group-btn input-group-lg">
                                <button class="btn btn-default" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>

                        </div><!-- /input-group -->
                    </form>
                </div>
            </div>

            <div class="row top-buffer-40">
                <div class="col-sm-3 col-sm-offset-3 text-left">
                    <a class="btn btn-default btn-block btn-hero-cta" href="@Url.Booking(1)">
                        <i class="fa fa-pencil"></i>&nbsp; Organise Event
                    </a>
                </div>
                <div class="col-sm-3 text-right">
                    <a class="btn btn-default btn-block btn-hero-cta" href="@Url.Search()">
                        <i class="fa fa-search"></i>&nbsp; Find an Event
                    </a>
                </div>
            </div>

        </div>
    </main>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="text-center">
                <h1>
                    <i class="fa fa-ticket fa-2x"></i>
                </h1>
                <h3>Event Ticketing - Made Easy
                </h3>
                <p class="lead">
                    Our easy-to-use 3 steps will get you started in no time.
                    <br/>Learn More...
                </p>
            </div>
        </div>
    </div>
</div>


<div class="container top-buffer-20">

    <div class="row categories-links">
        <div class="col-xs-12">
            <h2>Categories</h2>
        </div>
        <div data-bind="foreach: parentCategories">
            <div class="col-xs-12 col-sm-6 category">
                <a data-bind="attr : {href : $parent.searchLink($data)}">
                    <i data-bind="attr : {class : fontIcon}"></i> <span data-bind="text: title"></span>
                </a>
            </div>
        </div>
    </div>

    <div class="row top-buffer-40">

        <div class="col-md-6">
            <div class="jumbotron">
                <p>
                    Design your <strong>free online ad</strong> now. Use your mobile, tablet or PC.
                </p>
                <img src="@Url.Content("~/Content/images/BookUsingThePhone.PNG")" class="img-stretch" alt="Book using your phone" />
                <p>
                    <a class="btn btn-lg btn-primary btn-block" href="@Url.Booking()" role="button">Place New Ad &raquo;</a>
                </p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="jumbotron">
                <p>
                    Need help or suggestion to improve this website?
                </p>
                <img src="@Url.Content("~/Content/images/support.jpg")" class="img-stretch" alt="support" />
                <p>
                    <a class="btn btn-lg btn-primary btn-block" href="@Url.ContactUs()" role="button">Contact Us &raquo;</a>
                </p>
            </div>
        </div>
    </div>
</div>
