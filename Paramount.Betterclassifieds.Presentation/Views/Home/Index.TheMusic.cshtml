@using System.Monads
@using Paramount
@model HomeModel

@{
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
    ViewBag.Title = "Classifieds Home - Find everything you're looking for right here";
    
    var adCount = Model.With(m => m.AdSummaryList).Return(a => a.Count, 0);

}

@section Scripts
{
    <script>
        $(function () {
            $paramount.ui.home.init();
        });
    </script>
}

@section Main{
    <main class="mast-head" id="content" role="main">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <h1>
                        <a href="@Url.Home()">
                            
                                TheMusic Classies
                            
                        </a>
                    </h1>
                    <p>
                        <em>Bringing Aussie music together...</em>
                    </p>
                </div>
                <div class="col-md-8 col-md-offset-2">
                    <form action="@Url.Action("Find", "Listings")">
                        <div class="input-group input-group-lg">
                            <input type="text" name="keyword" id="keyword" class="form-control input-lg" placeholder="I am after...">
                            <div class="input-group-btn input-group-lg">
                                <button class="btn btn-default" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>

                        </div><!-- /input-group -->
                    </form>
                </div>
            </div>
        </div>
    </main>
}

@if (adCount > 0)
{
    <div class="home-featured">

        <div class="container">

            <div class="row">
                <div class="col-xs-6">
                    <h2>Featured Events</h2>
                </div>
            </div>

            <div class="row">

                @foreach (var ad in Model.AdSummaryList)
                {
                    if (ad.CategoryAdType.HasValue())
                    {
                        @Html.Partial("_AdTile_" + ad.CategoryAdType, ad)
                    }
                    else
                    {
                        @Html.Partial("_AdTile", ad)
                    }

                }
            </div>

        </div>
    </div>

}


<div class="container top-buffer-40">

    <div class="row">
        <div class="col-xs-12">
            <div class="jumbotron">
                <h1>
                    <i class="fa fa-ticket"></i> Events and Ticketing is here ...
                </h1>
                <p>
                    Do you have an event that you need ticketing for? We have you covered. Select the
                    <strong>Event &amp; Ticketing</strong> category from the list below. There's a bunch
                    load of features to manage an event including:
                    <ul>
                        <li>Ticket validation using Barcode Recognition</li>
                        <li>Tickets</li>
                        <li>Guests</li>   
                        <li>Groups (grouping guests together e.g. Tables)</li>   
                        <li>Event Organisers</li>  
                        <li>And plenty more...</li>
                    </ul>
                </p>
            </div>
        </div>
    </div>

    <div class="row categories-links">
        <div class="col-xs-12">
            <h2>Categories</h2>
        </div>
        <div data-bind="foreach: parentCategories">
            <div class="col-xs-12 col-sm-6 category">
                <a data-bind="attr : {href : $parent.searchLink($data)}">
                    <i data-bind="attr : {class : fontIcon}"></i> <span data-bind="text: title"></span>
                </a>
            </div>
        </div>
    </div>

    <div class="row top-buffer-40">

        <div class="col-md-6">
            <div class="jumbotron">
                <p>
                    Design your <strong>free online ad</strong> now. Use your mobile, tablet or PC.
                </p>
                <img src="@Url.Content("~/Content/images/BookUsingThePhone.PNG")" class="img-stretch" alt="Book using your phone" />
                <p>
                    <a class="btn btn-lg btn-primary btn-block" href="@Url.Booking()" role="button">Place New Ad &raquo;</a>
                </p>
            </div>

        </div>
        <div class="col-md-6">
            <div class="jumbotron">
                <p>
                    Need help or suggestion to improve this website?
                </p>
                <img src="@Url.Content("~/Content/images/support.jpg")" class="img-stretch" alt="support" />
                <p>
                    <a class="btn btn-lg btn-primary btn-block" href="@Url.ContactUs()" role="button">Contact Us &raquo;</a>
                </p>
            </div>
        </div>
    </div>
</div>
