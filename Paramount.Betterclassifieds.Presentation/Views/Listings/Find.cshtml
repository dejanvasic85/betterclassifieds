@using Paramount

@model Paramount.Betterclassifieds.Presentation.ViewModels.SearchModel

@{
    Layout = Url.ClientUrl("~/Views/Shared/_ApplicationLayout.cshtml");
}

@section Scripts{
    <script src="@Url.Content("~/Scripts/Listings/Find.js")"></script>
}

<div class="row top-buffer-20" id="top">

    @*Filters*@
    <div class="col-sm-3 hidden-xs">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Refine Search</h4>
            </div>
            <div class="panel-body">
                @AdSearchFilter()
            </div>
        </div>
    </div>

    @*Ad Details*@
    <div class="col-sm-9">

        @*Show refine search button for modal dialog (only when in mobile)*@
        <div class="row visible-xs">
            <div class="col-xs-12 bottom-buffer-10">
                <a href="#" class="btn btn-block btn-default visible-xs" data-toggle="modal" data-target="#filteringModal">
                    Refine Search
                </a>
            </div>
        </div>
        
        <div class="well">
            displaying 10 results for ""
        </div>

        <div class="row">
            <div class="col-xs-12">
                @Html.Partial("_ListingResults", Model.SearchResults)
            </div>
        </div>

        <div class="row">
            <div class="col-xs-10">
                @*Fetch more ads*@
                <button id="btnShowMore" class="btn btn-default btn-block" data-url="@Url.Action("ShowMore")">
                    Show more ...
                </button>
            </div>
            <div class="col-xs-2">
                <a class="btn btn-default btn-block" href="#top" title="Back To Top">
                    <i class="glyphicon glyphicon-arrow-up"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="filteringModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                @AdSearchFilter()
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default">Close</button>
            </div>
        </div>
    </div>
</div>

@helper AdSearchFilter()
{
    <form role="form" method="GET" action="@Url.Action("Find")">

        @*Keyword or AdId*@
        <div class="form-group">
            @Html.LabelFor(m => m.SearchFilters.Keyword)
            @Html.TextBox("Keyword", Model.SearchFilters.Keyword, new { @class = "form-control input-sm" })
        </div>

        @*Categories*@
        <div class="form-group">
            @Html.LabelFor(m => m.SearchFilters.CategoryId)
            <select id="CategoryId" class="form-control input-sm js-select"
                    data-url="@Url.Action("GetCategoryOptions", "Categories")"
                    data-selected="@Model.SearchFilters.CategoryId"></select>
        </div>

        @*Locations*@
        <div class="form-group">
            @Html.LabelFor(m => m.SearchFilters.LocationId)
            <select id="LocationId" class="form-control input-sm js-select"
                    data-url="@Url.Action("GetLocationOptions", "Location")"
                    data-selected="@Model.SearchFilters.LocationId"></select>
        </div>

        @*Sorting*@
        <div class="form-group">
            @Html.LabelFor(m => m.SearchFilters.SortBy)
            <select id="SortBy" class="form-control input-sm">
                <option value="Newest">Newest First</option>
                <option value="Oldest">Expiring First</option>
                <option value="PriceLow">Price - Lowest First</option>
                <option value="PriceHigh">Price - Highest First</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">
            Go
        </button>
    </form>
}
