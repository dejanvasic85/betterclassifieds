@using Paramount
@using Paramount.Betterclassifieds.Configuration

@{
    var brand = ConfigManager.ReadAppSetting<string>("Brand");
    Layout = brand.HasValue() ? string.Format("~/Views/Shared/_Layout.{0}.cshtml", brand) : "~/Views/Shared/_Layout.cshtml";
}

@section HeadSection{
    @RenderSection("HeadSection", false)
}


@RenderSection("Main", false)

@*Body*@
@RenderBody()

@section Scripts{

    @RenderSection("Scripts", required: false)
}


@Html.Partial("_Footer")

@RenderSection("Modals", false)
