@*This layout inherits the application layout and ads a quick search (with some scripts)*@

@{
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
}

@section Main{
    @RenderSection("Main", false)    
}

@section QuickSearch{
    @*Quick Search Bar*@
    <div class="row">
        <form role="form" method="GET" action="@Url.Action("Find", "Listings")">
            <div class="col-sm-5">
                <input type="text" name="keyword" id="keyword" class="form-control" placeholder="Keyword or Ad ID">
            </div>
            <div class="col-sm-5">
                <select name="categoryId" id="categoryId" class="form-control js-select" data-url="@Url.Action("GetCategoryOptions", "Categories")"></select>
            </div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-default btn-block">Search</button>
            </div>
        </form>
    </div>
}

@RenderBody()


@section Scripts{
    @RenderSection("scripts", false)
}