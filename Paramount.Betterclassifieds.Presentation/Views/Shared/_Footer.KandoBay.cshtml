@using Paramount.Betterclassifieds.Business
@*Footer*@
<div class="clearfix"></div>
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-center">
                <a href="@Url.Home()">Home</a> |
                <a href="@Url.ContactUs()">Contact Us</a> |
                <a href="@Url.EventPricing()">Pricing</a> |
                <a href="@Url.Terms()">Terms</a>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 text-center">
                &copy; @DateTime.Now.Year - <a target="_blank" href="http://www.paramountit.com.au">Powered by Paramount IT Solutions</a>
            </div>
        </div>


        @{
            var config = DependencyResolver.Current.GetService<IApplicationConfig>();
            var releaseNumber = config.Version;
            var displayVersionNumber = config.Environment.EquivalentToAny("dev", "ci", "test");
        }

        @if (displayVersionNumber)
        {
            <div class="row">
                <div class="col-xs-12 text-center">
                    Release : @releaseNumber
                </div>
            </div>
        }


        <div class="row top-buffer-10">
            <div class="col-xs-12 text-center">
                <a href="http://blog.kandobay.com.au" target="_blank">
                    <i class="fa fa-rss fa-2x"></i>
                </a>
                &nbsp;
                <a href="https://facebook.com/kandobayoz" target="_blank">
                    <i class="fa fa-facebook fa-2x"></i>
                </a>
                &nbsp;
                <a href="https://twitter.com/kandobay" target="_blank">
                    <i class="fa fa-twitter fa-2x"></i>
                </a>
                &nbsp;
                <a href="https://plus.google.com/114892609202144651161" target="_blank">
                    <i class="fa fa-google-plus fa-2x"></i>
                </a>
            </div>
        </div>

    </div>
</footer>
