@if (!Request.IsAuthenticated)
{
    <a class="btn btn-default" href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in"></i> Login/Register</a>
}
else
{
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-default dropdown-toggle login-options" data-toggle="dropdown" aria-expanded="false">
            <span class="glyphicon glyphicon-user"></span> @User.Identity.Name
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li><a href="@Url.Action("Index", "UserAds")"> <i class="fa fa-th-list"></i> My Ads</a> </li>
            <li><a href="@Url.Action("Details", "Account")"> <i class="fa fa-user"></i> Account Details</a> </li>
            <li><a href="@Url.Action("ChangePassword", "Account")"> <i class="fa fa-edit"></i> Change Password</a> </li>
            <li><a href="@Url.Action("Logout", "Account")"><i class="fa fa-sign-out"></i> Logout</a></li>
        </ul>
    </div>
}