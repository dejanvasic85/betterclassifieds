@model dynamic

@{
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
    ViewBag.Title = "Manage my Ads";
}

@section Scripts{

    <script>
        $paramount.ui.userAdsUI.init();
    </script>
}


<div class="container top-buffer-60 user-ads">

    <div class="row">
        <div class="col-sm-6">
            <h2 class="page-header">My Ads (<span data-bind="text : selectedStatus"></span>)</h2>
        </div>
        <div class="col-sm-6">
            <div class="btn-group user-menu-filters pull-right" data-toggle="buttons">
                <label class="btn btn-primary active" data-status="All" data-bind="click: setStatus">
                    <input type="radio" name="options" id="option1" autocomplete="off" checked> All
                </label>
                <label class="btn btn-success" data-status="Current" data-bind="click: setStatus">
                    <input type="radio" name="options" id="option2" autocomplete="off"> Current
                </label>
                <label class="btn btn-warning" data-status="Scheduled" data-bind="click: setStatus">
                    <input type="radio" name="options" id="option3" autocomplete="off"> Scheduled
                </label>
                <label class="btn btn-danger" data-status="Expired" data-bind="click: setStatus">
                    <input type="radio" name="options" id="option3" autocomplete="off"> Expired
                </label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">

            <div class="progress">
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                    <span class="sr-only"></span>
                    Loading... Please Wait
                </div>
            </div>

            <div class="alert alert-info-alt" data-bind="visible: noAdsAvaialble" style="display: none;" id="noAdsMsg">
                There doesn't seem to be anything here at the moment :( <br />
                <a href="@Url.Action("Step1", "Booking")">Go ahead and book an ad!</a>
            </div>

            <div id="adList" style="display: none" data-bind="foreach: ads">
                <div class="panel" data-bind="css : {'panel-danger' : $data.status() === 'Expired', 'panel-success' :  $data.status() === 'Current', 'panel-warning' : $data.status() === 'Scheduled'} ,visible: $data.status() === $parent.selectedStatus() || $parent.selectedStatus() === 'All'">
                    <div class="panel-heading">
                        <strong>
                            <span data-bind="text: adId"></span> -
                            <span data-bind="text: heading"></span>
                        </strong>
                        <div class="pull-right userads-cmd-panel" data-bind="visible : $data.status() === 'Current'">
                            <strong>
                                <a data-bind="attr : {href : viewHref}">
                                    View <i class="fa fa-eye"></i>
                                </a>
                            </strong>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            @*Image*@
                            <div class="col-sm-2 col-xs-3">
                                <img class="thumbnail hidden-xs"
                                     alt="100x100"
                                     data-bind="visible : adImageId() !== '', attr : {src : imageUrl}">

                                <img class="thumbnail visible-xs"
                                     alt="50x50"
                                     data-bind="visible : adImageId() !== '', attr : {src : imageUrlSmaller}">

                            </div>

                            @*Descripton*@
                            <div class="col-sm-4 col-xs-9" data-bind="text: description"></div>


                            @*Dates*@
                            <div class="col-sm-6 hidden-xs">
                                <dl class="dl-horizontal myads-date-info">
                                    <dt>Starts</dt>
                                    <dd data-bind="text: starts"></dd>
                                    <dt>Ends</dt>
                                    <dd data-bind="text: ends"></dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    @*Footer - Command Panel*@
                    <div class="panel-footer">
                        Visits : <span data-bind="text: visits"></span>
                        <div class="pull-right">

                            <button data-bind="visible: messageCount() > 0" class="btn btn-primary view-messages">
                                <span class="hidden-xs">Enquiries</span> <i class="fa fa-envelope"></i> ( <span data-bind="text: messageCount"></span> )
                            </button>
                            <a class="btn btn-default" data-bind="visible: isEventAd ,attr : {href: editEventUrl }">
                                <span class="hidden-xs">Event Dashboard </span> <i class="fa fa-dashboard"></i>
                            </a>
                            <button class="btn btn-default book-again" data-bind="click: bookAgain()">
                                <span class="hidden-xs">Use as Template</span> <i class="fa fa-recycle"></i>
                            </button>
                            <a class="btn btn-default" data-bind="visible : $data.totalPrice() > 0 ,  attr : {href : bookingInvoiceHref}" target="_blank">
                                <span class="hidden-xs">Invoice</span> <i class="fa fa-file"></i>
                            </a>
                            <div style="display:inline-block" data-bind="visible : $data.status() !== 'Expired'">
                                <a class="btn btn-default" data-bind="attr : { 'data-adid' : $data.adId(), href : editHref} ">
                                    <span class="hidden-xs">Edit</span> <i class="fa fa-pencil"></i>
                                </a>
                                <button class="btn btn-default cancel-ad" data-bind="click: cancelAd">
                                    <span class="hidden-xs">Cancel</span> <i class="fa fa-trash"></i>
                                </button>
                            </div>


                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div id="userEnquiriesDialog" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Direct Messages</h4>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Enquiry</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach : userEnquiries">
                            <tr>
                                <td data-bind="text: fullName"></td>
                                <td data-bind="text: email"></td>
                                <td data-bind="text: enquiryText"></td>
                                <td data-bind="text: createdDate"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>

    <div id="cancelAdDialog" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Are you sure?</h4>
                </div>
                <div class="modal-body">
                    <p>
                        <strong><i class="fa fa-warning"></i> Danger: </strong>
                        This action is not reversable. Please contact our team
                        for a refund, if applicable.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary confirm-cancel js-load">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <div id="bookAgainDialog" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Booking the same Ad</h4>
                </div>
                <div class="modal-body">
                    You will be taken through the booking steps with all forms prefilled
                    with the selected ad details. Click Ok to get started.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary confirm-book-again js-load">Ok</button>
                </div>
            </div>
        </div>
    </div>
</div>
